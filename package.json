{
  "name": "haptic-middleware",
  "version": "1.0.0",
  "description": "",
  "main": "js/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node js/index.js",
    "start:watch": "nodemon -w js/index.js",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "compile": "npx pkg -t macos . --out-path dist",
    "dev": "concurrently --names \"build,start\" -c \"blue,yellow\" --kill-others \"npm run build:watch\" \"npm run start:watch\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@serialport/parser-readline": "^10.3.0",
    "express": "^4.18.1",
    "open": "^8.4.0",
    "serialport": "^10.4.0",
    "ws": "^8.6.0"
  },
  "bin": "./js/index.js",
  "pkg": {
    "assets": [
      "scripts/**/*",
      "node_modules/@serialport/**/*"
    ],
    "targets": [
      "node10.24.1-linux-macos"
    ],
    "outputPath": "build"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/ws": "^8.5.4",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.18",
    "ts-node": "^10.9.1"
  }
}
